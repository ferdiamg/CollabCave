- content_for :title, "Your profile"
.name
  %h2.headline.name__headline
    = "@"+@user.username
  .name__info
    = @user.beats.count
    beats

.user-beats
  %h2.headline Users beats
  .item-container
    - @user.beats.each do |beat|
      .beat
        = link_to beat.name, beat_path(beat), class: "beat__link"

%hr.divider

.contact
  %h2.headline Contact
  .contact__email
    = @user.email
  .contact__button
    = mail_to "#{@user.email}", "Contact", class: "button button--link", subject: "Collaboration on collabcave.io"