- content_for :title, "Reset password"
%section.login
  .login__box
    .left
      .left__content
        .content__logo
          .content__logo--clickable
            = link_to :root do
              = show_svg('cclogo.svg')
        .loginpacker
          .content__text
            .content__text--headline
              Reset your password!
            .content__text--cta
              %p
                It happens to the best of us, don't worry, we got you!
                Enter your Email below and we send instructions on how to reset your password.
          .content__form
            = form_tag password_resets_path, :method => :post do
              = text_field_tag :email, nil, placeholder: "Email", class: "login__field", type: "email", required: true
              = submit_tag "Reset my password!", class: "login__button"
        .content__footer
          © CollabCave 2019, All Rights Reserved.
    .right
      .right__toprightrect
        = show_svg('toprightrect.svg')
      .right__downleftrect
        = show_svg('downleftrect.svg')
      .floating
        .right__illustration
          = show_svg('illustrationv2.svg')
    .lpfooter
      © CollabCave 2019, All Rights Reserved.