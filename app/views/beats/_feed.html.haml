- if @beats
  - @beats.each do |beat|
    %p
      %b
        = beat.name
        = beat.bpm
        = beat.key
      posted by
      %b
        = "@" + User.find(beat.user_id).username
      %br
      %audio{ :controls => 'controls' }
        %source{ :src => "#{beat.link+"?raw=1"}" }
      - if current_user.id == beat.user_id  
        = link_to 'Edit', edit_beat_path(beat)
        = link_to 'Delete', beat, method: "DELETE", data: {confirm: "Do you really want to delete #{beat.name}?"}