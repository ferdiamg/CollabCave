- content_for :title, "CollabCave"
%section.login
  .login__box
    = image_tag "collabcave_logo.svg", alt: "CollabCave Logo", class: "login__logo"
    = render "form"
    .login__register
      Don't have an account?
      = link_to "Sign Up", :register, class: "login__register-link"
    .login__register
      = link_to "Forgot Password?", new_password_reset_path, class: "login__register-link"
