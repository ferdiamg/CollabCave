
= form_tag user_sessions_path, method: "post", class: "login__form" do
  .login__input
    = text_field_tag :email, nil, placeholder: "Email", class: "login__field"
    = password_field_tag :password, nil, placeholder: "Password", class: "login__field login__field--password"
    = submit_tag "Login", class: "button button--standard"
