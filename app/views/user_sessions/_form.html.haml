= form_tag user_sessions_path, method: "POST", class: "login__form" do
  .login__input
    .login__field-wrapper
      = text_field_tag :email, nil, placeholder: " ", class: "login__field", type: "email", required: true
      = label_tag :email
    .login__field-wrapper
      = password_field_tag :password, nil, placeholder: " ", class: "login__field login__field--password", required: true
      = label_tag :password
    .login__field-wrapper
      = check_box_tag :remember, params[:remember], false
      = label_tag :remember_me
    = submit_tag "Login", class: "button button--standard"
